<% blog_articles.group_by {|a| a.date.year }.each do |year, articles| %>
  <div class="w-full h-full bg-green">
    <div class="w-7xl h-8 sticky top-0 pb-12 pt-4 bg-stone-50">
      <h2 class="text-4xl font-serif text-center"><%= year %></h2>

    </div>
    <div class="mt-12">
      <% articles.each do |article| %>
        <%= partial("article_card", locals: { article: article }) %>
      <% end %>
    </div>
  </div>
<% end %>
